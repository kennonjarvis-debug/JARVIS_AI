# Environment Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=sk-ant-your-api-key-here

# Supabase (Database & Storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here

# n8n (Workflow Automation)
N8N_API_URL=https://your-n8n-instance.com/api/v1
N8N_API_KEY=your-n8n-api-key-here

# Buffer (Social Media Management)
BUFFER_ACCESS_TOKEN=your-buffer-access-token-here
BUFFER_PROFILE_TWITTER=your-twitter-profile-id
BUFFER_PROFILE_LINKEDIN=your-linkedin-profile-id
BUFFER_PROFILE_FACEBOOK=your-facebook-profile-id

# HubSpot (CRM)
HUBSPOT_ACCESS_TOKEN=pat-na1-your-access-token-here
HUBSPOT_PORTAL_ID=your-portal-id-here

# SendGrid (Email)
SENDGRID_API_KEY=SG.your-api-key-here
SENDGRID_FROM_EMAIL=noreply@dawgai.com
SENDGRID_FROM_NAME=DAWG AI

# Discord (Optional - for notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Approval System
APPROVAL_EMAIL=admin@dawgai.com
APPROVAL_EXPIRE_HOURS=24

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Feature Flags
ENABLE_AUTO_POSTING=true
ENABLE_AUTO_REFUNDS=false
ENABLE_AUTO_EMAIL_CAMPAIGNS=true
