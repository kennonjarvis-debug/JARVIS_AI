# Jarvis Control Plane Configuration

# Server Configuration
JARVIS_PORT=4000
NODE_ENV=development
LOG_LEVEL=info

# AI Dawg Backend URLs
AI_DAWG_BACKEND_URL=http://localhost:3001
AI_DAWG_DOCKER_URL=http://localhost:3000

# Python Microservices
VOCAL_COACH_URL=http://localhost:8000
PRODUCER_URL=http://localhost:8001
AI_BRAIN_URL=http://localhost:8002

# Authentication
# Generate a secure token for production
JARVIS_AUTH_TOKEN=test-token

# CORS Configuration
CORS_ORIGIN=*

# Claude MCP Server (optional)
ENABLE_MCP=false

# ChatGPT Integration (optional)
CHATGPT_APP_KEY=your-chatgpt-app-key-here

# Redis (if using direct connection)
REDIS_URL=redis://localhost:6379

# Database (if using direct connection)
DATABASE_URL=postgresql://user:password@localhost:5432/jarvis
