{
  "name": "jarvis-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "postbuild": "node scripts/shortcuts/auto-update-shortcut.js",
    "postinstall": "prisma generate",
    "start": "next start",
    "lint": "echo 'no lint configured'",
    "deploy:vercel": "vercel --prod --confirm --yes",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:smoke": "playwright test tests/e2e/smoke",
    "test:a11y": "playwright test tests/accessibility",
    "security:audit": "./scripts/security-audit.sh",
    "perf:audit": "./scripts/performance-audit.sh"
  },
  "dependencies": {
    "@prisma/client": "^6.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "bcryptjs": "^3.0.2",
    "ioredis": "^5.8.1",
    "next": "14.2.5",
    "next-auth": "^4.24.11",
    "qrcode": "^1.5.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "speakeasy": "^2.0.0",
    "stripe": "^19.1.0",
    "ua-parser-js": "^2.0.6",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@joshfarrant/shortcuts-js": "0.6.0",
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.11",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^10.0.0",
    "axe-core": "^4.8.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prisma": "^6.2.0",
    "typescript": "5.4.5",
    "vercel": "latest"
  }
}
