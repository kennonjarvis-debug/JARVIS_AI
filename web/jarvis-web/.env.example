# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3100
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Redis Configuration
# Option 1: Using Redis URL (Upstash, AWS ElastiCache, etc.)
REDIS_URL=redis://localhost:6379
# or for Upstash:
# UPSTASH_REDIS_URL=rediss://default:your-password@your-endpoint.upstash.io:6379

# Option 2: Using individual Redis connection parameters
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session Configuration
SESSION_MAX_AGE=604800 # 7 days in seconds
SESSION_UPDATE_AGE=86400 # 24 hours in seconds
MAX_CONCURRENT_SESSIONS=3

# Session Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW=900 # 15 minutes in seconds
SUSPICIOUS_ACTIVITY_THRESHOLD=3

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Stripe Price IDs
STRIPE_PRICE_JARVIS_STARTER=price_your-starter-price-id
STRIPE_PRICE_JARVIS_PROFESSIONAL=price_your-professional-price-id
STRIPE_PRICE_JARVIS_ENTERPRISE=price_your-enterprise-price-id
STRIPE_PRICE_AIDAWG_CREATOR=price_your-creator-price-id
STRIPE_PRICE_AIDAWG_PRO=price_your-pro-price-id
STRIPE_PRICE_AIDAWG_STUDIO=price_your-studio-price-id

# Stripe Webhook Secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3100

# Database (Supabase)
DATABASE_URL=postgresql://user:password@host:5432/database

# Node Environment
NODE_ENV=development
