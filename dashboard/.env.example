# Jarvis Dashboard Configuration
# Copy this file to .env and update with your values

# =============================================================================
# PORTS
# =============================================================================

# Dashboard API port
DASHBOARD_PORT=5001

# Frontend port (configured in package.json)
FRONTEND_PORT=3003

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Jarvis Control Plane
JARVIS_API_URL=http://localhost:4000

# AI DAWG Backend
AI_DAWG_API_URL=http://localhost:3001

# =============================================================================
# MONITORING
# =============================================================================

# Path to monitoring directory
MONITORING_DIR=../../.monitoring

# AI DAWG root directory (for historical metrics)
AI_DAWG_ROOT=/Users/benkennon/ai-dawg-v0.1

# =============================================================================
# CACHING
# =============================================================================

# Cache TTL for instance activity (milliseconds)
CACHE_TTL_INSTANCE_ACTIVITY=2000

# Cache TTL for system health (milliseconds)
CACHE_TTL_SYSTEM_HEALTH=3000

# Cache TTL for business metrics (milliseconds)
CACHE_TTL_BUSINESS_METRICS=5000

# =============================================================================
# API SETTINGS
# =============================================================================

# API timeout for external calls (milliseconds)
API_TIMEOUT=3000

# Retry attempts for failed API calls
API_RETRY_ATTEMPTS=2

# Base delay for retry backoff (milliseconds)
API_RETRY_BASE_DELAY=200

# =============================================================================
# CHAT SETTINGS
# =============================================================================

# Chat API timeout (milliseconds)
CHAT_TIMEOUT=60000

# Max conversation history length
MAX_CONVERSATION_HISTORY=10

# =============================================================================
# PROACTIVE SYSTEM
# =============================================================================

# Enable proactive intelligence system
PROACTIVE_ENABLED=true

# Proactive suggestion refresh interval (milliseconds)
PROACTIVE_REFRESH_INTERVAL=30000

# =============================================================================
# DEVELOPMENT
# =============================================================================

# Node environment
NODE_ENV=development

# Enable debug logging
DEBUG=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3003

# Enable rate limiting
RATE_LIMIT_ENABLED=false

# Rate limit: requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Rate limit: window duration (minutes)
RATE_LIMIT_WINDOW_MINUTES=15
